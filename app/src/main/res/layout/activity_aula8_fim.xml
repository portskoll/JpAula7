<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exercicios.aula8Fim">

    <ImageView
        android:id="@+id/img_fim"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_nome_fim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Nome do usuario"
        app:layout_constraintEnd_toEndOf="@+id/img_fim"
        app:layout_constraintStart_toStartOf="@+id/img_fim"
        app:layout_constraintTop_toBottomOf="@+id/img_fim" />

    <TextView
        android:id="@+id/txt_email_final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="email do usuario"
        app:layout_constraintEnd_toEndOf="@+id/txt_nome_fim"
        app:layout_constraintStart_toStartOf="@+id/txt_nome_fim"
        app:layout_constraintTop_toBottomOf="@+id/txt_nome_fim" />

</androidx.constraintlayout.widget.ConstraintLayout>